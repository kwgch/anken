

<%= search_form_for @q do |f| %>
<div class="row">
  <div class="col-md-1 text-right">
    <%= f.label :no, "案件NO" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :no_start %>
  </div>
  <div class="col-md-1 text-right">
    <%= f.label :title, "タイトル" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :title_cont %>
  </div>
  <div class="col-md-1 text-right">
    <%= f.label :place, "勤務地" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :place_cont %>
  </div>
  <div class="col-md-1 text-right">
    <%= f.label :content, "内容" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :content_cont %>
  </div>
</div>

<div class="row">
  <div class="col-md-1 text-right">
    <%= f.label :term, "期間" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :term_cont %>
  </div>
  <div class="col-md-1 text-right">
    <%= f.label :price, "報酬" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :price_cont %>
  </div>
  <div class="col-md-1 text-right">
    <%= f.label :environment, "言語/環境" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :environment_cont %>
  </div>
  <div class="col-md-1 text-right">
    <%= f.label :job, "職種/人数" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :job_cont %>
  </div>
</div>

<div class="row">
  <div class="col-md-1 text-right">
    <%= f.label :contract, "契約形態" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :contract_cont %>
  </div>
  <div class="col-md-1 text-right">
    <%= f.label :business, "業種" %>
  </div>
  <div class="col-md-2">
    <%= f.search_field :business_cont %>
  </div>
  <div class="col-md-1">　</div>
  <div class="col-md-2"><%= f.submit '検索', class: 'btn btn-primary active' %></div>
  <div class="col-md-1">　</div>
  <div class="col-md-2 center"><%= link_to '新規登録', new_project_path, class: "btn btn-default active" %></div>
</div>
<% end %>

<%= will_paginate @entries, :previous_label => "⇐ 前ページ", :next_label => "次ページ ⇒" %>
<div class="table-responsive">
<table class="table table-hover table-bordered table-striped">
  <tr>
    <th class="center">案件NO</th>
    <th class="center">案件タイトル</th>
    <th class="center">勤務地</th>
    <th class="center">期間</th>
    <th>　</th>
    <th>　</th>
    <th>　</th>
  </tr>

  <% @projects.each do |project| %>
  <tr>
    <td><%= project.no %></td>
    <td><%= project.title %></td>
    <td><%= project.place %></td>
    <td><%= project.term %></td>

    <td class="info center"><%= link_to '参照', project %></td>
    <td class="success center"><%= link_to '編集', edit_project_path(project) %></td>
    <td class="danger center"><%= link_to '削除', project, method: :delete, data: { confirm: '削除します。よろしいですか？' } %></td>
  </tr>
  <% end %>
</table>
</div>